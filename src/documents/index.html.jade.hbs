---
layout: default
---

hgroup
  h1 {{ course.title }}
  h2 {{ course.subtitle }}

article.syllabus
  section.course-info
  {{#with course.info}}
    table
      tr 
        td Instructor:
        td {{ instructor }}
      {{#each staff}}
      tr
        td {{ isFirst @index }}
        td {{ this }} 
      {{/each}} 
   {{/with}}

  section.course-description
    p {{{ course.description }}}

  {{#each course.sessions }}
  section.session{{this.order-prop}}
    h2 
      span {{ this.order-prop }} 
      | {{ this.title }}
    p {{getDate this.order-prop}}, {{ ../course.info.time }}
    p {{ ../course.info.location }}

    table
    {{#each this.resources}}
      tr {{ @key }} 
      {{#each this}}
        tr
          td {{ this.title }}
          td {{ this.site.name }}
      {{/each}}
    {{/each}}
  {{/each}}
