---
layout: default
---

article.syllabus
  hgroup
    h1 {{ course.title }}
    h2 {{ course.subtitle }}

  section.course-info
  {{#with course.info}}
    table
      tr 
        td Instructor:
        td {{ instructor }}
      {{#each staff}}
      tr
        td {{ isFirst @index }}
        td {{ this }} 
      {{/each}} 
   {{/with}}

   section.email-policy
     h1 Email Policy
     p {{ course.info.emailPolicy }}

   section.course-objectives
     h1 Objectives
     ul
     {{#each course.objectives}}
       li {{ this }}
     {{/each}}

  section.course-description
    h1 Description
    {{{ course.description }}}

  section.requirements
  {{#with course.requirements}}
    h1 Requirements
    {{{ description }}}

    section.prerequisites
      h1 Prerequisites
      p {{ prerequisites.description }}
      table
      {{#each this.prerequisites.resources}}
        tr {{ @key }} 
        {{#each this}}
          tr
            td {{ this.title }}
            td {{ this.site.name }}
        {{/each}}
      {{/each}}
      
      section.resits
      h1 Resits
      p {{ resits }}

      section.appeals
      h1 Appeals
      {{{ appeals }}}
    {{/with}}

  section.schedule
    h1 Schedule
    {{#each course.sessions }}
    section.session{{this.order-prop}}
      h1 
        span {{ this.order-prop }} 
        | {{ this.title }}
      p {{getDate this.order-prop}}, {{ ../course.info.time }}
      p {{ ../course.info.location }}

      table
        {{#each this.readings}}
        tr
          td {{ this.author }}
          td {{ this.title }}
        {{/each}}
  {{/each}}
